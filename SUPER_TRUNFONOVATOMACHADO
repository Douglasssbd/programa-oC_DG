#include <stdio.h>

int main (){
    char carta, estado[100];
    char codigo[100];
    char cidade[100];
    float população;
    int turísticos;
    float área;
    float pib;

    printf("Carta: \n");
    scanf("%d", &carta);

    printf("Estado: \n");
    scanf("%s", &estado);

    printf("Código: \n");
    scanf("%s", &codigo);

    printf("Cidade: \n");
    scanf("%s", &cidade);

    printf("População: \n");
    scanf("%f", &população);

    printf("Área: \n");
    scanf("%f", &área);

    printf("PIB: \n");
    scanf("%f", &pib);

    printf("Número de Pontos Turísticos: \n");
    scanf("%d", &turísticos);

    printf("Carta: %d\n", carta);
    printf("Estado: %s\n", estado);
    printf("Código: %s\n", codigo);
    printf("Cidade: %s\n", cidade);
    printf("População: %f\n", população);
    printf("Área: %f KM2\n", área);
    printf("PIB: %f Bilhões de reais\n", pib);
    printf("Número de Pontos Turísticos: %d\n", turísticos);

    

    printf("Carta: \n");
    scanf("%d", &carta);

    printf("Estado: \n");
    scanf("%s", &estado);

    printf("Código: \n");
    scanf("%s", &codigo);

    printf("Cidade: \n");
    scanf("%s", &cidade);

    printf("População: \n");
    scanf("%f", &população);

    printf("Área: \n");
    scanf("%f", &área);

    printf("PIB: \n");
    scanf("%f", &pib);

    printf("Número de Pontos Turísticos: \n");
    scanf("%d", &turísticos);
    
    printf("Carta: %d\n", carta);
    printf("Estado: %s\n", estado);
    printf("Código: %s\n", codigo);
    printf("Cidade: %s\n", cidade);
    printf("População: %f\n", população);
    printf("Área: %f KM2\n", área);
    printf("PIB: %f Bilhões de reais\n", pib);
    printf("Número de Pontos Turísticos: %d\n", turísticos);
    

    return 0;

    

 }
